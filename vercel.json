{
    "version" : 2,
    "builds": [{
        "src": "BlogApp/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    },
      {
        "src": "build_files.sh",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "staticfiles_build"
        }
      }],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "BlogApp/wsgi.py"
        },
        {
            "src": "/static/(.*)",
            "dest": "Blog/static/$1"
        },
        {
            "src": "/media/(.*)",
            "dest": "Blog/media/$1"
        }
    ]
   
}

